<div class="container">
  <p style="color: green"><%= notice %></p>
  <div class="justify-content-center text-center" id="<%= dom_id @place %>" >
    <h1><%= @place.name %></h1>
  </div>
  <div class="container d-flex justify-content-center row">
    <%= render @place %>
    <div class="container d-flex text-center flex-column row">
      <div class="container">
        <%= link_to "Edit this place", edit_place_path(@place), class:"m-2 button btn btn-primary btn-md rounded-1 border-1 text-center" %>
        <%= button_to "Destroy this place", @place, method: :delete, class:"m-4 hard-button btn btn-primary btn-md rounded-1 border-1 text-center" %>
      </div>
    </div>
  </div>
</div>
<div>
  <%= link_to "Retour", places_path, class:"button btn btn-primary btn-md rounded-1 border-1 text-center m-4" %>
</div>
