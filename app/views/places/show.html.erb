<div class="container">
  <p style="color: green"><%= notice %></p>
  <div class="justify-content-center text-center" id="<%= dom_id @place %>" >
    <h1><%= @place.name %></h1>
  </div>

  <div class="container d-flex justify-content-center row">
    <%= render @place %>

    <div class="container d-flex text-center flex-column row">
      <%= link_to "Edit this place", edit_place_path %>          
      <%= button_to "Destroy this place", @place, method: :delete, class:"m-4" %>
    </div>

  </div>
</div>
<div>
  <%= link_to "Retour", places_path, class:"button btn btn-primary btn-lg rounded-1 border-1 text-center m-4" %>
</div>
