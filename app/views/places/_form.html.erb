<div class="container justify-content-center col-5">
  <%= form_with(model: place) do |form| %>
    <% if place.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(place.errors.count, "error") %> prohibited this place from being saved:</h2>

        <ul>
          <% place.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="input">
      <span class="input-group-text col-4 mb-2 justify-content-center" id="basic-addon1">Nom du lieu</span>
      <%= form.text_field :name, class:"col-12" %>
    </div>

    <div class="input">
      <span class="input-group-text col-4 mb-2 justify-content-center" id="basic-addon1">Catégorie</span>
      <%= form.text_field :category, class:"col-12" %>
    </div>

    <div class="input">
      <span class="input-group-text col-4 mb-2 justify-content-center" id="basic-addon1">Ville</span>
      <%= form.text_field :city, class:"col-12" %>
    </div>

    <div class="input">
      <span class="input-group-text col-4 mb-2 justify-content-center" id="basic-addon1">Code Postal</span>
      <%= form.number_field :zip_code, class:"col-12" %>
    </div>

    <div class="input">
      <span class="input-group-text col-4 mb-2 justify-content-center" id="basic-addon1">Adresse</span>
      <%= form.text_field :address, class:"col-12" %>
    </div>

    <div class="input">
      <span class="input-group-text col-4 mb-2 justify-content-center" id="basic-addon1">Description</span>
      <%= form.text_field :description, class:"col-12" %>
    </div>

    <div class="input">
      <span class="input-group-text col-4 mb-2 justify-content-center" id="basic-addon1">Rareté sur 5</span>
      <%= form.number_field :rarity, class:"col-12" %>
    </div>

    <div>
      <%= form.submit "Créer" %>
    </div>
  <% end %>
</div>
